{% extends 'base.html.twig' %}

{% block title %}
 Articles
{% endblock %}

{% block body %}
<h1>{{ title }}! âœ…</h1>
    <div class="container mx-auto p-4">
        {% for article in articles %}
            <div class="bg-white rounded p-4 mb-4 shadow">
                {{ article.nameShow }}
            </div>
            {{ article.summaryShow }}
            <div>
             <img src="{{ article.img }}" alt="Article Image">
              <a href="{{ path('item_article', { id: article.id }) }}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Voir l'article
                    </a>
        {% else %}
            <p class="text-gray-700">Nothing to show</p>
        {% endfor %}
    </div>
{% endblock %}